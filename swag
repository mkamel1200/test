<!DOCTYPE html>
<html>
<head>
  <title>Stipend Calculator</title>
</head>
<body>
  <h2>Stipend Calculator</h2>
  <form id="stipendForm">
    <label>Invasiveness (0–3): <input type="number" id="i" min="0" max="3"></label><br>
    <label>Per-visit Duration (0–3): <input type="number" id="d" min="0" max="3"></label><br>
    <label>Study Duration (0–3): <input type="number" id="s" min="0" max="3"></label><br>
    <label>Visit Frequency (0–3): <input type="number" id="f" min="0" max="3"></label><br>
    <label>Perceived Risk (0–3): <input type="number" id="r" min="0" max="3"></label><br>
    <label>Radiation (0–3): <input type="number" id="x" min="0" max="3"></label><br>
    <label>Logistical Complexity (0–3): <input type="number" id="l" min="0" max="3"></label><br>
    <label>TBM (e.g., 0.75, 1.0, 1.25): <input type="number" step="0.01" id="tbm" value="1.0"></label><br><br>
    <button type="button" onclick="calculate()">Calculate</button>
  </form>
  <p id="result"></p>

  <script>
    function calculate() {
      const i = +document.getElementById('i').value;
      const d = +document.getElementById('d').value;
      const s = +document.getElementById('s').value;
      const f = +document.getElementById('f').value;
      const r = +document.getElementById('r').value;
      const x = +document.getElementById('x').value;
      const l = +document.getElementById('l').value;
      const tbm = +document.getElementById('tbm').value;

      const stipend = (25 + 25*i + 35*d + 5*s + 5*f + 10*r + 10*x + 10*l) * tbm;
      document.getElementById('result').innerText = `Estimated Stipend per Visit: $${stipend.toFixed(2)}`;
    }
  </script>
</body>
</html>
